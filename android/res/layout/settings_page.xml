<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e2e6"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Language:"
            android:textSize="40sp"/>
        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/language_selector"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBarRow" />
        <TextView
            android:id="@+id/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/seekBarRow"
            android:text="Patch Rows [3] "
            android:textSize="20sp"/>

        <SeekBar
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBarRow"
            android:layout_alignParentRight="true"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBarCol" />
        <TextView
            android:id="@+id/colText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/seekBarCol"
            android:text="Patch Columns [3] "
            android:textSize="20sp"/>
        <SeekBar
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBarCol"
            android:layout_alignParentRight="true"
            android:max="20"
            android:progress="6"
            android:id="@+id/frag_thresh" />
        <TextView
            android:id="@+id/fragment_threshold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/frag_thresh"
            android:text="Fragment threshold [0.30]"
            android:textSize="20sp"/>
        <SeekBar
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_thresh"
            android:layout_alignParentRight="true"
            android:max="10"
            android:progress="8"
            android:id="@+id/matching_thresh" />
        <TextView
            android:id="@+id/matching_threshold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/matching_thresh"
            android:text="Matching threshold [0.80]"
            android:textSize="20sp"/>

    </RelativeLayout>
</LinearLayout>